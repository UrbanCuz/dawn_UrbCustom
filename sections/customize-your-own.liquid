{{ 'customize-your-own.css' | asset_url | stylesheet_tag }}

<section class="customize-your-own-section">
    <div class="title-wrapper">
        <h2 class="section-title">
            {{ section.settings.title }}
        </h2>
        <p class="section-description">{{ section.settings.description }}</p>
    </div>

    <div class="cards-wrapper">
        {% for block in section.blocks %}
            <div class="card">
                <img src="{{ block.settings.image | image_url: width: 400, height: 300 }}" alt="{{ block.settings.title }}" class="card-image" width="400" height="300">
                <h3 class="card-title">{{ block.settings.title }}</h3>
                <p class="card-description">{{ block.settings.description }}</p>
                <a href="{{ block.settings.link }}" class="card-link">Learn More</a>
            </div>
        {% endfor %}    
    </div>
</section>

{% schema %}
{
    "name": "Customize Your Own",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Section Title",
            "default": "Customize Your Own"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Section Description",
            "default": "Upload your design or idea and weâ€™ll turn it into custom art or apparel, crafted to match your style perfectly."
        }
        ],
        "blocks": [
            {
                "type": "card",
                "name": "Card",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Card Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Card Title",
                        "default": "Custom Art"
                    },
                    {
                        "type": "text",
                        "id": "description",
                        "label": "Card Description",
                        "default": "Bring your vision to life with our custom art services."
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Card Link"
                    }
                ]
            }
        ]
}
{% endschema %}