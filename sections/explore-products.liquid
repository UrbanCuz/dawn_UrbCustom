{{ 'explore-products.css' |  asset_url | stylesheet_tag }}

<section class="explore-products-section">
    <div class="container">
        <h2 class="section-title">Explore <span class="red-title">Products</span></h2>

        <div class="explore-grid">
            {% comment %} Grid 1 {% endcomment %}
            <div class="grid-item grid-item-1">
                {% if section.settings.item1_image != blank %}
                   <a href="{{ section.settings.item1_link }}" class="grid-link">
                        <img src="{{ section.settings.item1_image | img_url: 'master' }}" alt="{{ section.settings.item1_title }}" class="grid-image" height="auto" width="100%">
                        <p class="grid-title">{{ section.settings.item1_title }}</p>
                    </a>
                {% endif %}
            </div>

            {% comment %} Grid 2 {% endcomment %}
            <div class="grid-item grid-item-2">
                {% if section.settings.item2_image != blank %}
                   <a href="{{ section.settings.item2_link }}" class="grid-link">
                        <img src="{{ section.settings.item2_image | img_url: 'master' }}" alt="{{ section.settings.item2_title }}" class="grid-image" height="auto" width="100%">
                        <p class="grid-title">{{ section.settings.item2_title }}</p>
                    </a>
                {% endif %}
            </div>

            {% comment %} Grid 3 {% endcomment %}
            <div class="grid-item grid-item-3">
                {% if section.settings.item3_image != blank %}
                   <a href="{{ section.settings.item3_link }}" class="grid-link">
                        <img src="{{ section.settings.item3_image | img_url: 'master' }}" alt="{{ section.settings.item3_title }}" class="grid-image" height="auto" width="100%">
                        <p class="grid-title">{{ section.settings.item3_title }}</p>
                    </a>
                {% endif %}
            </div>

            {% comment %} Grid 4 {% endcomment %}
            <div class="grid-item grid-item-4">
                {% if section.settings.item4_image != blank %}
                   <a href="{{ section.settings.item4_link }}" class="grid-link">
                        <img src="{{ section.settings.item4_image | img_url: 'master' }}" alt="{{ section.settings.item4_title }}" class="grid-image" height="auto" width="100%">
                        <p class="grid-title">{{ section.settings.item4_title }}</p>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</section>

