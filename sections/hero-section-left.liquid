{{ 'hero-section-left.css' |  asset_url | stylesheet_tag }}


<section class="hero-left">
  <div class="hero__content"
    style="
      background-color: {{ section.settings.background_color }};
    "
  >
    <h1 class="hero__title">{{ section.settings.upper_title }}</h1>
    <h1>{{ section.settings.lower_title }}</h1>
    <p class="hero__subtitle">{{ section.settings.description }}</p>
    <div class="hero__actions">
      <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
      <a href="{{ section.settings.secondary_button_link }}" class="btn secondary">{{ section.settings.secondary_button_text }}</a>
    </div>
  </div>


  <div class="right-content-test">
    <p>Test the right space</p>
  </div>
</section>


{%  schema  %}  
{
  "name": "Hero Section Left",
  "settings": [
    {
      "type": "text",
      "id": "upper_title",
      "label": "Upper Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "lower_title",
      "label": "Lower Title",
      "default": "Discover the best products just for you"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our wide range of products tailored to your needs."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ]

}
{% endschema %}