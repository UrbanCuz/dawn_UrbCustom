{{ 'hero-section-left.css' |  asset_url | stylesheet_tag }}


<section class="hero-left">
  <div class="hero__content"
    style="
      background-color: {{ section.settings.background_color }};
    "
  >
    <h1 class="upper__title">{{ section.settings.upper_title }}</h1>
    <h1 class="lower__title">{{ section.settings.lower_title }}</h1>
    <p class="description">{{ section.settings.description }}</p>
    <a href="/collections/all" class="hero-btn">Shop Wall Art</a>
    <a href="/collections/all" class="hero-btn">Shop Apparel</a>
  </div>


  <div class="right-content-test">
    <p>Test the right space</p>
  </div>
</section>


{%  schema  %}  
{
  "name": "Hero Section Left",
  "settings": [
    {
      "type": "text",
      "id": "upper_title",
      "label": "Upper Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "lower_title",
      "label": "Lower Title",
      "default": "Discover the best products just for you"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our wide range of products tailored to your needs."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ]

}
{% endschema %}